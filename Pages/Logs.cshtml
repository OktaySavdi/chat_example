@page "/chat/logs"
@model Chat.Web.LogsModel
@{
    ViewData["Title"] = "Logs";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <main role="main" class="pb-3">

        <h1>Elasticsearch Logs</h1>


        <table class="table table-hover">
            <caption style="caption-side: top" class="text-right">
                <form method="post" name="msgForm" asp-page-handler="DeleteLogs">
                    <button type="submit" class="btn btn-danger">Delete All @Model.LogItems.Count() Logs</button>
                </form>
            </caption>
            <thead>
                <tr>
                    <th scope="col">Level</th>
                    <th scope="col">Log Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.LogItems)
                {
                    <tr>
                        <td>@log.Level</td>
                        <td class="text-wrap text-break">@log.Message</td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</div>

